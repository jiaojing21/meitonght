<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>

	<class name="com.itsv.platform.common.messageMgr.vo.Itsv_message" table="itsv_message" lazy="false">

		<id name="id" type="java.lang.String" column="id">
			<generator class="assigned" />
		</id>

		<property name="create_time" type="java.lang.String" column="CREATE_TIME"  length="32"  />

		<property name="sent_time" type="java.lang.String" column="SENT_TIME"  length="32"  />

		<property name="msg_status" type="java.lang.Long" column="MSG_STATUS"  length="11"  />

		<property name="msg_type" type="java.lang.Long" column="MSG_TYPE"  length="11"  />

		<property name="parent_msg_id" type="java.lang.String" column="PARENT_MSG_ID"  length="32"  />

		<property name="msg_title" type="java.lang.String" column="MSG_TITLE"  length="128"  />

		<property name="msg_content" type="java.lang.String" column="MSG_CONTENT"  length="1000"  />

		<property name="file_ids" type="java.lang.String" column="FILE_IDS"  length="128"  />

		<property name="file_names" type="java.lang.String" column="FILE_NAMES"  length="1000"  />
		
		<property name="userid" type="java.lang.String" column="USERID"  length="32"  />

		<property name="username" type="java.lang.String" column="USERNAME"  length="32"  />

  	</class>
</hibernate-mapping>