<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>

	<class name="com.itsv.platform.system.chooseuser.vo.UserRole" table="gbp_role" lazy="false">
		<id name="id" type="java.lang.String" column="id">
			<generator class="uuid.hex" />
		</id>

		<property name="name" type="java.lang.String" column="name" length="50" />
		<property name="remark" type="java.lang.String" column="remarks" length="200" />
	</class>
</hibernate-mapping>
