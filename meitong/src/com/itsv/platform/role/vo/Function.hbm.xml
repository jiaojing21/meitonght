<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>

	<class name="com.itsv.platform.role.vo.Function" table="gbp_function" lazy="false">

		<id name="id" type="java.lang.String" column="ID">
			<generator class="uuid.hex" />
		</id>

		<property name="menu_id" type="java.lang.String" column="MENU_ID"  length="32"  />

		<property name="name" type="java.lang.String" column="NAME"  length="128"  />

		<property name="code" type="java.lang.String" column="CODE"  length="16"  />

		<property name="remarks" type="java.lang.String" column="REMARKS"  length="512"  />

		<property name="adddate" type="java.util.Date" column="ADDDATE"  length="0"  />

  	</class>
</hibernate-mapping>