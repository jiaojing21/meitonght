<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>

	<class name="com.itsv.platform.role.vo.FunctionRole" table="gbp_function_role" lazy="false">
	
		<id name="id" type="java.lang.String" column="ID">
			<generator class="uuid.hex" />
		</id>
		<property name="function_id" type="java.lang.String" column="FUNCTION_ID"  length="32"  />
		<property name="role_id" type="java.lang.String" column="ROLE_ID"  length="32"  />
		<property name="menu_id" type="java.lang.String" column="MENU_ID"  length="32"  />
  	</class>
</hibernate-mapping>