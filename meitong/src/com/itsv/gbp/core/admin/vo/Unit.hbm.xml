<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>

	<class name="com.itsv.gbp.core.admin.vo.Unit" table="gbp_unit" lazy="false">
		<id name="id" type="java.lang.String" column="id">
			<generator class="uuid.hex" />
		</id>

		<property name="code" type="java.lang.String" column="code" length="50" />
		<property name="name" type="java.lang.String" column="name" length="100" />
		<property name="totalName" type="java.lang.String" column="totalname" length="200" />
		<property name="leaf" type="java.lang.Boolean" column="isleaf" length="1" />
		<property name="idClass" type="java.lang.Integer" column="idclass" length="11" />
		<property name="enabled" type="java.lang.Boolean" column="enabled" length="1" />
		<property name="departno" type="java.lang.String" column="departno"  length="32"  />
		<property name="managerid" type="java.lang.String" column="managerid"  length="32"  />
		<property name="managername" type="java.lang.String" column="managername"  length="32"  />
		<property name="tel" type="java.lang.String" column="tel"  length="64"  />
		<property name="fax" type="java.lang.String" column="fax"  length="64"  />
		<property name="email" type="java.lang.String" column="email"  length="128"  />
		<property name="address" type="java.lang.String" column="address"  length="128"  />
		<property name="note" type="java.lang.String" column="note"  length="1024"  />
		<property name="parentid" type="java.lang.String" column="parentid"  length="32"  />
		<property name="parentname" type="java.lang.String" column="parentname"  length="32"  />
		<property name="unitClass" type="java.lang.String" column="unitclass" length="32" />

	</class>

</hibernate-mapping>
