<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>

	<class name="com.itsv.annotation.ratio.vo.Ratio" table="RATIO" lazy="false">

		<id name="id" type="java.lang.String" column="ID">
			<generator class="uuid.hex" />
		</id>

		<property name="title" type="java.lang.String" column="TITLE"  length="32"  />

		<property name="time" type="java.lang.String" column="TIME"  length="32"  />

		<property name="type" type="java.lang.String" column="TYPE"  length="2"  />

		<property name="picurl" type="java.lang.String" column="PICURL"  length="200"  />

		<property name="content" type="java.lang.String" column="CONTENT"  length="4000"  />

		<property name="subtype" type="java.lang.String" column="SUBTYPE"  length="2"  />

  	</class>
</hibernate-mapping>