<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>

	<class name="com.itsv.annotation.company.vo.Company" table="COMPANY" lazy="false">

		<id name="id" type="java.lang.String" column="ID">
			<generator class="uuid.hex" />
		</id>

		<property name="companyname" type="java.lang.String" column="COMPANYNAME"  length="50"  />

		<property name="companyx" type="java.lang.String" column="COMPANYX"  length="50"  />

		<property name="companyy" type="java.lang.String" column="COMPANYY"  length="50"  />
		
		<property name="type" type="java.lang.String" column="TYPE"  length="1"  />

  	</class>
</hibernate-mapping>