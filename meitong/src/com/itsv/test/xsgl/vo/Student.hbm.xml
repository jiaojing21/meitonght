<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>

	<class name="com.itsv.test.xsgl.vo.Student" table="student" lazy="false">

		<id name="id" type="java.lang.String" column="ID">
			<generator class="uuid.hex" />
		</id>

		<property name="age" type="java.lang.Long" column="AGE" not-null="true"  length="11"  />

		<property name="name" type="java.lang.String" column="NAME" not-null="true"  length="30"  />

		<property name="nick" type="java.lang.String" column="NICK"  length="30"  />

  	</class>
</hibernate-mapping>